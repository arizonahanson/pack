#!/usr/bin/env zsh

for bold in 0 1; do
  for col in {0..7}; do
    echo -en "\e[38;5;$((col+bold*8))m■$(printf '%X' $((col+bold*8))) "
  done; echo
done; echo
for col in 2 6 4 5 1 3 0 7; do
  echo -en "\e[38;5;${col}m■\e[38;5;$((col+8))m■"
done; echo
for col in 2 6 4 5 1 3 0 7; do
  echo -en "\e[38;5;${col}m$(printf '%X' $col)\e[38;5;$((col+8))m$(printf '%X' $((col+8)))"
done; echo
